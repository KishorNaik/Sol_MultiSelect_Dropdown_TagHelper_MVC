@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, CaptureRenderTagHelper
@model Sol_Demo.TagHelpers.MultiSelectRazorTagHelper

<link capture="Select2Css" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

<select class="@Model.Class" asp-for="@Model.SelectedItems.Model" asp-items="@Model.ItemSource" name="@Model.SelectedItems.Name" multiple>
   
</select>

<script capture="Select2Javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script type="text/javascript" capture="Select2Implement">
    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
    });
</script>